generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/database.db"
}

model message {
  id          Int    @id @default(autoincrement())
  messageFrom String
  messageAt   String
  message     String
}

model userHasCurrentData {
  id             Int     @id @default(autoincrement())
  hasCurrentData Boolean
  user           String  @unique
}

model readTo {
  id      Int    @id @default(autoincrement())
  user    String
  message String
}

model imageTo {
  id   Int    @id @default(autoincrement())
  user String
  path String
}

model updateNotification {
  id   Int    @id @default(autoincrement())
  user String
}
